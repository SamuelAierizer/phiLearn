<div class="flex min-h-screen">
  <!-- Sidenav --> 
  <%= render 'shared/sidenav' %>

  <main class="flex-shrink w-full bg-gray-100 dark:bg-gray-900 relative">
    <!-- Header -->
    <%= render 'shared/navbar' %>

    <div class="px-4 md:px-6">
    
      <!-- Page Head -->
      <div class="mt-4 flex flex-col md:flex-row dark:text-white">
        <div class="flex-col flex-grow">
          <div class="flex flex-row space-x-2">
            <%= link_to schools_path do %><i class="fas fa-chevron-left text-4xl"></i><% end %>
            <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Invite</h1> 
          </div>
          <h2 class="ml-8 text-gray-400"><%= @school.name %></h2>
        </div>
        <div class="mx-4"></div>
      </div>

      <!-- Page Conent -->
      <div class="w-full overflow-hidden shadow-xs my-8">
        
        <div class="shadow-lg p-4 w-full bg-white dark:bg-gray-800 relative dark:text-white">
          <h2 class="text-2xl w-max text-gray-800 dark:text-white font-semibold border-b border-gray-200">Message</h2>
          <div class="my-4 text-justify"><%= @invite.message %></div>

          <div class="flex flex-col my-8">
            <span class="text-lg mb-6">Do you accept the invitation? </span>
            <div class="flex flex-row space-x-4 ml-0 md:ml-8">
              <%= link_to 'Accept', invite_accept_path(@invite), data: { turbo_method:"post" }, class:"btn-sm btn-blue" %>
              <%= link_to 'Decline', @invite, class:"btn-sm btn-red", data: { turbo_method:"delete", turbo_confirm: 'Are you sure?' }  %>
            </div>
          </div>

          <span class="text-sm text-gray-700 dark:text-gray-200">*Declining will delete the invitation</span>
        </div>          

      </div>

    </div>
  </main>

</div>