<div class="flex min-h-screen">
  <!-- Sidenav --> 
  <%= render 'shared/sidenav' %>

  <main class="flex-shrink w-full bg-gray-100 dark:bg-gray-900 relative">
    <!-- Header -->
    <%= render 'shared/navbar' %>

    <div class="px-4 md:px-6">
    
        <!-- Page Head -->
        <div class="my-4 flex flex-col md:flex-row dark:text-white">
          <div class="flex-col flex-grow">
            <div class="flex flex-row space-x-2">
              <%= link_to @course do %><i class="fas fa-chevron-left text-4xl"></i><% end %>
              <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Add users to <%= @course.name %></h1>
            </div>
            <h2 class="ml-8 text-gray-400"><%= @school.name %></h2>
          </div>
        </div>

        <!-- Page Conent -->
        <div class="mb-12">
          <%= render 'courses/user_table' %>
        </div>
        
    </div>
  </main>

</div>