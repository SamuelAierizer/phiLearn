<div class="flex min-h-screen">
  <!-- Sidenav --> 
  <%= render 'shared/sidenav' %>

  <main class="flex-shrink w-full bg-gray-100 dark:bg-gray-900 relative">
    <!-- Header -->
    <%= render 'shared/navbar' %>

    <div class="px-4 md:px-6">
    
      <!-- Page Head -->
      <div class="mt-4 flex flex-col md:flex-row dark:text-white">
        <div class="flex-col flex-grow">
          <div class="flex flex-row space-x-2">
            <%= link_to calendar_path do %><i class="fas fa-chevron-left text-4xl"></i><% end %>
            <h1 class="text-4xl font-semibold text-gray-800 dark:text-white"><%= @event.title %> Event</h1> 
            <%= link_to '(edit)', edit_event_path(@event), class:"my-auto underline" if current_user.admin? %> 
          </div>
          <h2 class="ml-8 text-gray-400"><%= @school.name %></h2>
        </div>
        <div class="mx-4"></div>
      </div>

      <!-- Page Conent -->
      <div class="w-full overflow-hidden shadow-xs my-8">
        
        <div class="flex flex-col md:flex-row w-full justify-between">
          <div class="w-full md:w-1/2">
            <div class="shadow-lg p-4 w-full bg-white dark:bg-gray-800 relative dark:text-white mb-8">
              <h2 class="text-2xl w-max text-gray-800 dark:text-white font-semibold border-b border-gray-200">Duration</h2>
              <div class="my-4 text-justify">
                <p>Start: <span><%= @event.start.to_formatted_s(:long) %></span></p>
                <p>Finish: <span><%= @event.getFinish.to_formatted_s(:long) %></span></p>
              </div>
            </div>
            <div class="shadow-lg p-4 w-full bg-white dark:bg-gray-800 relative dark:text-white mb-8">
              <h2 class="text-2xl w-max text-gray-800 dark:text-white font-semibold border-b border-gray-200">Description</h2>
              <div class="my-4 text-justify"><%= @event.description %></div>
            </div>

          </div>

          <div class="w-full md:w-2/5 mt-16 md:mt-0">
            <h2 class="font-semibold text-xl mb-4 dark:text-white">Shares</h2>
            
            <div class="mt-8 dark:text-white">
              <h3 class="font-normal text-lg">Shares list</h3>

              <div class="my-4 w-80 max-h-96 overflow-y-auto">
                <% @users.each do |user| %>
                  <div class='px-4 py-2 hover:bg-gray-300 dark:hover:bg-black'>
                    <span>&bull;</span> <%= user.username %>
                  </div>
                <% end %>
              </div>

            </div>
          </div>
        </div>

      </div>

    </div>
  </main>

</div>