  <div class="text-3xl font-semibold mb-4">Enrolled to</div>

  <div class="flex flex-col">
    <% profile.courses.each do |course| %>
      <div class="flex flex-col md:flex-row mt-4 border-b">
        <div class="text-xl font-semibold md:w-1/5 mr-4"><%= course.name %></div>
        <div class="flex flex-row md:w-1/5">
          <div class="font-semibold mr-4">Grade: </div>
          <div><%= getGrade(profile, course) %></div>
        </div>
        <div class="flex flex-row md:w-1/5">
          <div class="font-semibold mr-4">Assignments: </div>
          <div><%= getDue(profile, course) %> due</div>
        </div>
      </div>
    <% end %>
  </div>