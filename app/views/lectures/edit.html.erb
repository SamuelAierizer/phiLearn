<main class="bg-gray-100 dark:bg-gray-900 h-screen overflow-hidden relative">
  <div class="flex items-start justify-between">
    <!-- Sidenav --> 
    <%= render 'shared/sidenav' %>


    <div class="flex flex-col w-full">
      <!-- Header -->
      <%= render 'shared/navbar' %>

      <div class="overflow-auto h-screen pb-24 px-4 md:px-6">
        <!-- Page Head -->
        <div class="mt-4 flex flex-col md:flex-row dark:text-white">
          <%= link_to @lecture do %><i class="fas fa-chevron-left text-4xl mb-4 md:mx-4"></i><% end %>
          <div class="flex-col flex-grow">
            <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Editing Lecture - <%= @lecture.name %></h1>
            <h2 class=" text-gray-400"><%= @school.name %></h2>
          </div>
        </div>

        <!-- Page Conent -->
        <div class="w-full overflow-hidden shadow-xs my-8">
          
          <div class="mt-4 mb-16">
            <%= render 'form', lecture: @lecture %>   
          </div>

        </div>      
      </div>
    </div>
  </div>
</main>