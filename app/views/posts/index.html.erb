<main class="bg-gray-100 dark:bg-gray-900 h-screen overflow-hidden relative" data-controller='toggle' >
  <div class="flex items-start justify-between">
    <!-- Sidenav --> 
    <%= render 'shared/sidenav' %>


    <div class="flex flex-col w-full md:space-y-4">
      <!-- Header -->
      <%= render 'shared/navbar' %>

      <div class="overflow-auto h-screen pb-24 px-4 md:px-6" data-controller="reply" data-reply-privilage-value=<%= current_user.role %> data-reply-uid-value=<%= current_user.id %> > 
        <!-- Page Head -->
        <div class="mt-4 flex flex-row dark:text-white">
          <%= link_to forum_path(id: @topic.forum.id) do %><i class="fas fa-chevron-left text-4xl mb-4 md:mx-4"></i><% end %>
          <div class="flex-col flex-grow">
            <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Topic: <%= @topic.name %></h1>
            <h2 class=" text-gray-400"><%= @school.name %></h2>
          </div>
          <div class="mx-4">
            <%= mainReplyButton @topic %>
          </div>
        </div>

        <!-- Page Conent -->
        <div class="shadow-lg px-4 py-6 w-full bg-white dark:bg-gray-700 relative my-8 dark:text-white">
          <h2 class="text-2xl w-max text-gray-800 dark:text-white font-semibold border-b border-gray-200">Description</h2>
          <div class="my-4 text-justify"><%= simple_format @topic.description %></div>
        </div>

        <div class="mt-8" >
          <%= turbo_stream_from "posts" %>

          <%= turbo_frame_tag "posts" do %>
            <%= render @posts %>
          <% end %>
        </div>

        <!-- Reply Popup -->
        <%= turbo_frame_tag "post_form" do %>
          <%= render 'form2', post: @post, topic_id: @topic.id %>
        <% end %>
    
      </div>
    </div>
  </div>
</main>