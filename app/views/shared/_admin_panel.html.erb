<!-- Admin options -->

<nav class="w-full transform duration-300 ease-in-out translate-x-0 absolute top-0" id="main">
  <div>
    <%= link_to schools_path, class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
      <i class="fas fa-tachometer-alt text-left"></i>
      <div class="mx-4 text-lg">Dashboard</div>
    <% end %>

    <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="main"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="-translate-x-full"
        data-animation-next-param="user"
        data-animation-nextfrom-param="translate-x-full"
        data-animation-nextto-param="translate-x-0"
    >
      <i class="fas fa-users text-left"></i>
      <div class="mx-4 text-lg">Users</div>
      <i class="fas fa-chevron-right absolute mr-4 right-0"></i>
    </a>

    <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="main"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="-translate-x-full"
        data-animation-next-param="course"
        data-animation-nextfrom-param="translate-x-full"
        data-animation-nextto-param="translate-x-0"
    >
      <i class="fas fa-atlas text-left"></i>
      <div class="mx-4 text-lg">Courses</div>
      <i class="fas fa-chevron-right absolute mr-4 right-0"></i>
    </a> 
          
    <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="main"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="-translate-x-full"
        data-animation-next-param="admin"
        data-animation-nextfrom-param="translate-x-full"
        data-animation-nextto-param="translate-x-0"
    >
      <i class="fas fa-user-shield text-left"></i>
      <div class="mx-4 text-lg">Admin</div>
      <i class="fas fa-chevron-right absolute mr-4 right-0"></i>
    </a>
    
  </div>
</nav>

<nav class="w-full transform duration-300 ease-in-out translate-x-full absolute top-0 z-0" id="user">
  <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="user"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="translate-x-full"
        data-animation-next-param="main"
        data-animation-nextfrom-param="-translate-x-full"
        data-animation-nextto-param="translate-x-0"
  >
    <i class="fas fa-chevron-left text-left"></i>
    <div class="mx-4 text-lg">Main Menu</div>
  </a>

  <%= link_to schools_overview_path(role: 'admin'), class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
    <i class="fas fa-user-shield text-left"></i>
    <div class="mx-4 text-lg">Admins</div>
  <% end %>

  <%= link_to schools_overview_path(role: 'teacher'), class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
    <i class="fas fa-chalkboard-teacher text-left"></i>
    <div class="mx-4 text-lg">Teachers</div>
  <% end %>

  <%= link_to schools_overview_path(role: 'student'), class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
    <i class="fas fa-user-graduate text-left"></i>
    <div class="mx-4 text-lg">Students</div>
  <% end %>
</nav>

<nav class="w-full transform duration-300 ease-in-out translate-x-full absolute top-0 z-0" id="course">
  <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="course"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="translate-x-full"
        data-animation-next-param="main"
        data-animation-nextfrom-param="-translate-x-full"
        data-animation-nextto-param="translate-x-0"
  >
    <i class="fas fa-chevron-left text-left"></i>
    <div class="mx-4 text-lg">Main Menu</div>
  </a>

  <%= link_to courses_path, class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
    <i class="far fa-chart-bar text-left"></i>
    <div class="mx-4 text-lg">Table</div>
  <% end %>

  <% @myCourses.each_with_index do |course, index| %>
    <%= link_to course, class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
      <div class="text-lg"><%= index + 1 %></div>
      <div class="mx-4 text-lg"><%= course.name %></div>
    <% end %>
  <% end %>
  
</nav>

<nav class="w-full transform duration-300 ease-in-out translate-x-full absolute top-0 z-0" id="admin">
  <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="admin"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="translate-x-full"
        data-animation-next-param="main"
        data-animation-nextfrom-param="-translate-x-full"
        data-animation-nextto-param="translate-x-0"
  >
    <i class="fas fa-chevron-left text-left"></i>
    <div class="mx-4 text-lg">Main Menu</div>
  </a>

  <%= link_to admin_path, class:"w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100", :action => 'go' do %>
    <i class="fas fa-user-shield text-left"></i>
    <div class="mx-4 text-lg">Admin Dashboard</div>
  <% end %>

  <a class="w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100" 
          href=<%= admin_stats_url %>
          data-turbo-frame="admin_content" 
          data-controller="turbo-frame-history"
          data-action="click->turbo-frame-history#mutate"
          data-turbo-frame-history-url-param=<%= admin_stats_url %>>
    <i class="fas fa-chart-line text-left"></i>
    <div class="mx-4 text-lg">Statistics</div>
  </a>


  <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="admin"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="-translate-x-full"
        data-animation-next-param="admin_setting"
        data-animation-nextfrom-param="translate-x-full"
        data-animation-nextto-param="translate-x-0"
  >
    <i class="fas fa-cogs text-left"></i>
    <div class="mx-4 text-lg">Settings</div>
    <i class="fas fa-chevron-right absolute mr-4 right-0"></i>
  </a>


  <a class="w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100" 
          href=<%= admin_trash_url %>
          data-turbo-frame="admin_content" 
          data-controller="turbo-frame-history"
          data-action="click->turbo-frame-history#mutate"
          data-turbo-frame-history-url-param=<%= admin_trash_url %>>
    <i class="fas fa-trash text-left"></i>
    <div class="mx-4 text-lg">Dump</div>
  </a>
  
</nav>

<nav class="w-full transform duration-300 ease-in-out translate-x-full absolute top-0 z-0" id="admin_setting">
  <a  class="text-lg w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100"
        data-action="animation#apply"
        data-animation-old-param="admin_setting"
        data-animation-oldfrom-param="translate-x-0"
        data-animation-oldto-param="translate-x-full"
        data-animation-next-param="admin"
        data-animation-nextfrom-param="-translate-x-full"
        data-animation-nextto-param="translate-x-0"
  >
    <i class="fas fa-chevron-left text-left"></i>
    <div class="mx-4 text-lg">Admin Menu</div>
  </a>

  <a class="w-full flex items-center px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100" 
          href=<%= admin_forum_url %> 
          data-turbo-frame="admin_content" 
          data-controller="turbo-frame-history"
          data-action="click->turbo-frame-history#mutate"
          data-turbo-frame-history-url-param=<%= admin_forum_url %>>
    <i class="fas fa-bullhorn text-left"></i>
    <div class="mx-4 text-lg">Forum</div>
  </a>

  <div data-controller='toggle' class=" px-4 py-2 my-3 justify-start text-gray-500 dark:text-white hover:bg-gray-600 hover:bg-opacity-25 hover:text-gray-100">
    <button data-action='click->toggle#toggle touch->toggle#toggle' class="flex flex-row w-full items-center">
      <i class="fas fa-users text-left"></i>
      <div class="mx-4 text-lg  flex-grow text-left">Accounts</div>
      <i class="fas fa-chevron-down float-right"></i>
    </button>
    <div data-toggle-target='toggleable' class="text-md flex flex-col ml-8 md:ml-20 my-2 hidden ">
      <%= link_to 'Imports', "", class:'my-1' %>
      <%= link_to 'Exports', "", class:'my-1' %>
    </div>
  </div>

</nav>