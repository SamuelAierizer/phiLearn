<main class="bg-gray-100 dark:bg-gray-900 h-screen overflow-hidden relative">
  <div class="flex items-start justify-between">
    <!-- Sidenav --> 
    <%= render 'shared/sidenav' %>


    <div class="flex flex-col w-full">
      <!-- Header -->
      <%= render 'shared/navbar' %>

      <div class="overflow-auto h-screen pb-24 px-4 md:px-6">
        <!-- Page Head -->
        <div class="my-4">
          <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Editing Question</h1>
          <h2 class=" text-gray-400"><%= @school.name %></h2>
        </div>

        <!-- Page Conent -->
        <div class="w-full overflow-hidden shadow-xs my-8">
          
          <div class="my-4">
            <%= render 'form', question: @question %>    
          </div>

          <div class="mt-16 mb-4">
            <%= link_to 'Back', @assignment, class:"btn btn-gray" %>
          </div>

        </div>      
      </div>
    </div>
  </div>
</main>