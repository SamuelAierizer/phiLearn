<%= turbo_frame_tag dom_id(topic) do %>
  <section class="bg-gradient bg-white dark:bg-gray-700 shadow-lg py-8 my-2">
    <div class="max-w-5xl mx-auto px-5 box-content">
      <div class="flex items-center flex-row -mx-5">
        <div class="w-full px-5 mb-5 md:mb-0 text-center md:text-left">
          <h6 class="uppercase font-semibold text-xs md:text-base text-blue-800 dark:text-blue-300">
            Check out
            <%= link_to topic_bookmark_path(id: topic), class:'p-2', data: { turbo_method: 'post' } do %>
              <%= getBookmarkedIcon topic %>
            <% end %>
          </h6>
          <h3 class="font-semibold font-heading text-2xl md:text-4xl dark:text-white">
            <%= link_to topic.name, posts_path(id: topic.id), 'data-turbo-frame': :_top  %>
          </h3>
        </div>

        <div class="w-full md:w-auto px-5 dark:text-white">
          <div class="flex justify-center text-center">
            <div class="w-28 md:w-32 border rounded-lg py-3 md:py-4 mx-2">
              <div class="text-lg md:text-xl font-semibold">
                <span>
                  <%= lastPoster topic %>
                </span>
              </div>
              <div class="opacity-75 text-xs mt-3 uppercase">
                Last Poster
              </div>
            </div>
            
            <div class="w-28 md:w-32 border rounded-lg py-3 md:py-4 mx-2">
              <div class="text-lg md:text-xl font-semibold">
                <span>
                  <%= lastPostAt topic %>
                </span>
              </div>
              <div class=" opacity-75 text-xs mt-3 uppercase">
                Last Post At
              </div>
            </div>

            <div class="text-lg mx-2 my-auto flex flex-row" data-edit-target="options" data-controller="edit" id=<%= topic.owner_id %>>
              <%= link_to edit_topic_path(topic), class:'text-blue-800 dark:text-blue-400 dark:hover:text-blue-700 mr-4' do %>
                <i class="fas fa-pen"></i>
              <% end %>
              <%= blocking topic %>
              <%= link_to topic, class:'text-red-800 hover:text-red-600 dark:text-red-300 dark:hover:text-red-500', data: { turbo_method:"delete", turbo_confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>