<div class="ml-8 mb-2">
    <div class="dark:text-white">
      <%= form_with(model: [target, Comment.new(parent_id: parent_id)]) do |f| %>
        <%= f.hidden_field :parent_id %>
        <div class="my-1">
          <%= f.label 'Reply' %>
          <%= f.text_area :body, class: 'flex-1 my-2 appearance-none border border-gray-300 w-full py-3 px-4 bg-white text-gray-700 placeholder-gray-400 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent' %>
          <%= f.text_field :target_type, id: :comment_target_type, value: target.class.name, type: :hidden %>
          <%= f.number_field :target_id, id: :comment_target_id, value: target.id, type: :hidden %>
          <%= f.number_field :user_id, id: :comment_user_id, value: current_user.id, type: :hidden %>
        </div>
        <%= f.submit 'Submit', class: 'btn-sm btn-blue' %>
        <button class="btn-sm btn-red" data-action="click->toggle#toggle">Cancle</button>
      <% end %>
    </div>
</div>
