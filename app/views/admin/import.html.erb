<main class="bg-gray-100 dark:bg-gray-900 h-screen overflow-hidden relative">
  <div class="flex items-start justify-between">
    <!-- Sidenav --> 
    <%= render 'shared/sidenav' %>


    <div class="flex flex-col w-full">
      <!-- Header -->
      <%= render 'shared/navbar' %>

      <div class="overflow-auto h-screen pb-24 px-4 md:px-6">
        <!-- Page Head -->
        <div class="mt-4 flex flex-col md:flex-row dark:text-white">
          <%= link_to :back do %><i class="fas fa-chevron-left text-4xl mb-4 md:mx-4"></i><% end %>
          <div class="flex-col flex-grow">
            <h1 class="text-4xl font-semibold text-gray-800 dark:text-white">Admin Dashboard</h1>
            <h2 class=" text-gray-400"><%= @school.name %></h2>
          </div>
          <div class="mx-4">
          </div>
        </div>

        <!-- Page Conent -->
        <div class="mt-8 mb-16 dark:text-white">
          <%= turbo_frame_tag "admin_content", target: "_top" do %>
            <div class="mb-16 mt-8">
              <h2 class="font-semibold text-3xl border-b dark:text-white">Import users from CSV</h2>

              <div class="flex flex-col">
                <div class="shadow-lg px-8 py-6 w-full bg-white dark:bg-gray-800 relative my-4 dark:text-white">
                  <%= form_tag users_import_path, multipart: true do %>

                    <p class="text-lg my-2 text-gray-600">If you have a large number of users to add, you can upload them using a CSV file.</p>

                    <p class="text-lg mt-8"><strong>Step1:</strong> Select CSV file</p>
                    <div class="my-2 dark:text-gray-400"><%= file_field_tag :file %></div>

                    <p class="text-lg mt-8"><strong>Step2:</strong> Upload and Import</p>

                    <div class="mt-8"><%= submit_tag "Import CSV", class:"btn btn-green" %></div>
                  <% end %>
                </div>
              </div>
            </div>

          <% end %>
        </div>
        
      </div>
    </div>
  </div>
</main>